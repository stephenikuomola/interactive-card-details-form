{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "no-const-assign": "error",
    "no-this-before-super": "error",
    "constructor-super": "error",
    "no-dupe-args": "error",
    "no-dupe-class-members": "error",
    "no-dupe-keys": "error",
    "no-unreachable": "error"
  },
  "ignorePatterns": [
    "/node_modules",
    "/parcel-cache",
    "/package-lock.json",
    "/dist"
  ]
}
